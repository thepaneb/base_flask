    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host","127.0.0.1",
                "--port","40000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}